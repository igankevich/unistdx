#ifndef UNISTDX_BITS_OCTET
#define UNISTDX_BITS_OCTET

#include <ostream>

namespace sys {

    namespace bits {

        struct octet {

            unsigned int _val;

            template <class T>
            octet(T rhs):
            _val(static_cast<unsigned char>(rhs)) {}

            inline friend std::ostream&
            operator<<(std::ostream& out, const octet& rhs) {
                out.width(2);
                return out << rhs._val;
            }

        };

    }

}

#endif // vim:filetype=cpp
