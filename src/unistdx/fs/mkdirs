#ifndef UNISTDX_FS_MKDIRS
#define UNISTDX_FS_MKDIRS

#include <unistdx/fs/path>

namespace sys {

	/// split path into components ignoring the last one
	/// assuming it is a file
	void
	mkdirs(const sys::path& root, const sys::path& relative_path);

	/// make directories assuming none of them exist
	void
	mkdirs(sys::path dir);

}

#endif // vim:filetype=cpp
