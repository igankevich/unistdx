#ifndef UNISTDX_FS_MKDIRS
#define UNISTDX_FS_MKDIRS

#include <unistdx/fs/path>

namespace sys {


	/**
	\brief
	Make directories assuming that the root exists.
	\date 2018-04-25
	\author Ivan Gankevich
	\param[in] root path, relative to which directories are created
	\param[in] relative_path path, components of which are created
	*/
	void
	mkdirs(const sys::path& root, const sys::path& relative_path);

	/**
	\brief
	Make directories assuming none of the path components exist.
	\date 2018-04-25
	\author Ivan Gankevich
	\param[in] dir path, components of which are created

	My description.
	*/
	void
	mkdirs(sys::path dir);

}

#endif // vim:filetype=cpp
