#ifndef UNISTDX_FS_FILE_TYPE
#define UNISTDX_FS_FILE_TYPE

#include <sys/types.h>
#include <sys/stat.h>

#include <iosfwd>

namespace sys {

    typedef ::mode_t mode_type;

    /// File types.
    /// \ingroup fs
    enum struct file_type: mode_type {
        /// Regular file.
        regular = S_IFREG,
        /// A directory.
        directory = S_IFDIR,
        /// Block device.
        block_device = S_IFBLK,
        /// Character device.
        character_device = S_IFCHR,
        /// Named pipe.
        /// \see \man{fifo,7}
        pipe = S_IFIFO,
        /// UNIX domain socket.
        /// \see \man{unix,7}
        socket = S_IFSOCK,
        /// Symbolic link.
        symbolic_link = S_IFLNK
    };

    /// Print file type as a character, as in \man{ls,1} command.
    std::ostream&
    operator<<(std::ostream& out, const file_type& rhs);

}

#endif // vim:filetype=cpp
