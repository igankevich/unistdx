#ifndef UNISTDX_BASE_DELETE_EACH
#define UNISTDX_BASE_DELETE_EACH

namespace sys {

    /**
    Delete each object pointed by the elements between
    iterators \p first and \p last.
    */
    template<class It>
    void
    delete_each(It first, It last) {
        while (first != last) {
            delete *first;
            ++first;
        }
    }

}

#endif // vim:filetype=cpp
