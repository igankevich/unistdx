#ifndef UNISTDX_BASE_SHA2
#define UNISTDX_BASE_SHA2

#include <string>

#include <unistdx/base/types>

namespace sys {

    class sha2 {

    private:
        union {
            u32 _digest[8] {
                0x6a09e667, 0xbb67ae85, 0x3c6ef372, 0xa54ff53a,
                0x510e527f, 0x9b05688c, 0x1f83d9ab, 0x5be0cd19};
            u64 _wdigest[4];
        };
        union {
            u32 _words[64] {};
            u64 _dwords[32];
            char _bytes[64];
        };
        char* _bytesptr = _bytes;
        u64 _length = 0;

    public:
        void insert(const char* data, std::size_t n);
        void finish() noexcept;
        void clear() noexcept;

        template <class T> inline const T*
        data() const noexcept {
            return reinterpret_cast<const T*>(this->_digest);
        }

        template <class T> inline static constexpr size_t
        size() noexcept { return 32 / sizeof(T); }

        std::string to_string() const;

    private:
        void process_message() noexcept;
        void pad_message() noexcept;

    };

}

#endif // vim:filetype=cpp
