#ifndef UNISTDX_NET_FAMILY
#define UNISTDX_NET_FAMILY


#include <netinet/in.h>
#include <sys/socket.h>
#include <sys/un.h>

#include <unistdx/config>
#include <unistdx/net/pstream>

namespace sys {

	typedef ::sa_family_t sa_family_type;

	enum struct family_type: sa_family_type {
		inet = AF_INET,
		inet6 = AF_INET6,
		unix = AF_UNIX
		#if defined(UNISTDX_HAVE_NETLINK)
		, netlink = AF_NETLINK
		#endif
	};

	pstream&
	operator<<(pstream& out, family_type rhs);

	pstream&
	operator>>(pstream& in, family_type& rhs);

}

#endif // vim:filetype=cpp
