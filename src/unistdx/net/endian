#ifndef UNISTDX_NET_ENDIAN
#define UNISTDX_NET_ENDIAN

namespace sys {

	/**
	\brief
	Guard object, that checks if endiannes was correctly determined at compile-time.
	\date 2018-05-23
	\author Ivan Gankevich
	\ingroup guard net
	\deprecated
	*/
	struct endian_guard {

		endian_guard();
		endian_guard(const endian_guard&) = delete;
		endian_guard(endian_guard&&) = delete;
		~endian_guard() = default;

		endian_guard&
		operator=(const endian_guard&) = delete;

	};

}

#endif // vim:filetype=cpp
