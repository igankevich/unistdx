#!/bin/sh

if test "$CI_PULL_REQUEST" != "false"
then
    echo "Skipping pull requests"
    exit 0
fi

export GUIX_MANIFEST=ci/manifest.scm
export GUIX_CHANNELS=ci/channels.scm
export GUIX_SYSTEMS="x86_64-linux i686-linux aarch64-linux"

echo
echo "Environment:"
env | grep -E '^(CI_|HOME|GUIX)' | sort | column -t -s= -R 1
echo

if test "$CI_BUILD_BRANCH" = "site"
then
    export GUIX_SYSTEMS="x86_64-linux"
    echo "Building the site"
    echo
/usr/libexec/gitbucket-ci << 'EOF'
export UNISTDX_MANIFEST=ci,site
slurm_job "site" sh -c '
    set -ex
    dst=cmmshq.ru:/srv/unistdx
    export PYTHONUNBUFFERED=1
    d=$(mktemp --directory /tmp/unistdx-XXXXXXXX)
    meson . $d
    cd $d
    ninja -v doxygen-std-tagfile
    ninja -v site
    rsync -e 'ssh -p 22222' -acv --delete src/unistdx/site/ $dst/
    rm -rf $d
'
EOF
else
/usr/libexec/gitbucket-ci << EOF
export UNISTDX_MANIFEST=ci,site

test_flags() {
    flags="\$@"
    d=/tmp/gitbucket-ci-\$(uuidgen)
    echo "
        set -ex
        meson \$flags . \$d
        cd \$d
        meson test --verbose
        rm -rf \$d"
}

slurm_job "sanitize-none" sh -c "\$(test_flags -Db_sanitize=none)"

if ! test "\$GUIX_SYSTEM" = "i686-linux"
then
    slurm_job "sanitize-address" sh -c "\$(test_flags -Db_sanitize=address)"
fi

if ! test "\$GUIX_SYSTEM" = "aarch64-linux"
then
    slurm_job "arch-native" sh -c "\$(test_flags -Dbuildtype=release -Dcpp_args=-march=native)"
fi

d=/tmp/gitbucket-ci-\$(uuidgen)
slurm_job "coverage" sh -c "
    set -ex
    meson -Db_coverage=true . \$d
    cd \$d
    ninja -v test-lcov
    rsync -a lcov/ \$OUTDIR/\$GUIX_SYSTEM-coverage/
"

EOF
fi
